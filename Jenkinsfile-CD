pipeline {
    agent any
    environment {
        DOCKER = credentials('Dockerhub')
    }
    stages {
        stage('login to dockerhub') {
            steps {
                sh "docker login --username ${DOCKER_USR} --password ${DOCKER_PSW}"
            }
        }
        
        stage('pull and run the image') {
            steps {
                sh "docker pull $DOCKER_USR/devops-junior:latest || echo 'image is up to date' "
                sh "docker container rm -f web"
                sh "docker container run -d --name web -p 80:80 $DOCKER_USR/devops-junior:latest"
            }
        }
    }
}